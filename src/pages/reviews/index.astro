---
import { getCollection } from "astro:content";
import PaperLayout from "../../layouts/PaperLayout.astro";

const reviews = await getCollection("reviews");
---

<PaperLayout title="Reviews">
  <div class="max-w-4xl mx-auto px-6 py-12">
    <h1 class="text-6xl font-heading italic mb-12">Reviews</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        reviews.map((review) => (
          <a
            href={`/reviews/${review.id}`}
            class="block border-2 border-text p-4 hover:bg-text hover:text-background transition-colors group"
          >
            <h2 class="text-3xl font-heading italic group-hover:translate-x-2 transition-transform">
              {review.data.title}
            </h2>
            <p class="font-mono text-sm uppercase opacity-70">
              {review.data.artist}
            </p>
          </a>
        ))
      }
    </div>
  </div>
</PaperLayout>
